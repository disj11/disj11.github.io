{{/* Generate search index data for local search */}}
{{- $index := slice -}}
{{- range site.RegularPages -}}
{{- $page := . -}}
{{/* Use full content instead of chunking to avoid duplicate links */}}
{{- $index = $index | append (dict
    "objectID" $page.File.UniqueID
    "content" $page.Plain
    "title" $page.Title
    "date" $page.Date
    "href" $page.Permalink
    "tags" $page.Params.tags
    "section" $page.Section
    "summary" $page.Summary
) -}}
{{- end -}}
{{- $index | jsonify -}}
